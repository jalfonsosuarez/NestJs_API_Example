generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  SUPERUSER
  USER
}

model User {
  id          String   @id @default(uuid())
  first_name  String
  second_name String
  email       String   @unique()
  password    String
  role        UserRole @default(USER)
  is_active   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt()
  inactiveAt  DateTime @updatedAt()
}

model Duacode {
  id          String   @id @default(uuid())
  nif         String
  name        String
  biografy    String
  departament String
  workstation String
  skills      Skills[]
  imageUrl    String
  omeletOnion Boolean  @default(false)
  birthdate   DateTime
  is_deleted  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt()
  deletedAt   DateTime @updatedAt()
}

model Skills {
  id          String   @id @default(uuid())
  description String
  Duacode     Duacode  @relation(fields: [duacodeId], references: [id])
  duacodeId   String
  is_deleted  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt()
  deletedAt   DateTime @updatedAt()
}
